{
  "manifest_version": 3,
  "name": "Inject CSS",
  "version": "2.0",
  "description": "为指定域名注入自定义CSS样式表。",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["plugin.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["plugin.js", "plugin.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
